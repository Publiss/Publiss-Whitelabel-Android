<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.publiss.publissplaystore" >
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/PublissCoreTheme" >
        <activity

            android:name="com.publiss.core.ui.KioskActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.publiss.core.provider.DocumentsContentProvider"
            android:authorities="com.publiss.core.provider.DocumentsContentProvider"
            android:enabled="true"
            android:exported="false" >
        </provider>
    </application>

</manifest>
